{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "MiPay API Documentation",
  "colors": {
    "primary": "#2563EB",
    "light": "#3B82F6",
    "dark": "#1D4ED8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "API docs",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Payments",
            "pages": [
              "api-reference/payments/payin",
              "api-reference/payments/status"
            ]
          },
          {
            "group": "Payouts",
            "pages": [
              "api-reference/payouts/create",
              "api-reference/payouts/status"
            ]
          },
          {
            "group": "Account",
            "pages": [
              "api-reference/account/balance"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://mipay.com//merchant/dashboard",
          "icon": "layout-dashboard"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@mipay.com",
          "icon": "lifebuoy"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "API Status",
        "href": "https://mipay.com/merchant/api-keys"
      },
      {
        "label": "Pricing",
        "href": "https://mipay.com/pricing"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Keys",
      "href": "https://mipay.com/merchant/api-keys"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mipay",
      "github": "https://github.com/mijr",
      "linkedin": "https://linkedin.com/company/mipay"
    }
  }
}